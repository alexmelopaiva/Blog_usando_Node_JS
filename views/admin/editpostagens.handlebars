{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
  <div class="card-body">
      <h4>Editar Postagem: </h4>
      <form action="/admin/postagem/edit" method="post">
  <input type="hidden" id="categorianame" value="{{postagem.categoria}}"> <br><br>
          <input type="hidden" value="{{postagem._id}}" name="id">
          <label for="titulo">Título: </label>
          <input type="text" name="titulo" class="form-control" value="{{postagem.titulo}}" required>
          <label for="slug">Slug: </label>
          <input type="text" name="slug" class="form-control" value="{{postagem.slug}}" required>
          <label for="descricao">Descrição: </label>
          <input type="text" name="descricao" class="form-control" value="{{postagem.descricao}}" required>
          <label for="conteudo">Conteúdo: </label>
          <textarea name="conteudo" class="form-control" required>{{postagem.conteudo}}</textarea>
          <label for="categoria">Categoria: </label>
          <!-- <select name="categoria" class="custom-selec mt-2"> -->
  <select name="categoria" id="categoriaselecionada" class="custom-select mt-2"> 
            {{#each categorias}}
              <option value="{{_id}}">{{nome}}</option>
            {{else}}
              <option value="0">Nenhuma categoria registrada</option>
            {{/each}}
          </select>
          <br>
  <!-- Necessário para pegar a categoria selecionada quando clicar em editar postagem -->
  <script type="text/javascript">  
  var categoria = document.getElementById("categorianame").value;
  document.getElementById("categoriaselecionada").value = categoria;
  </script>

          <button class="btn btn-success mt-2" type="submit">Editar Postagem</button>
          
      </form>
  </div>
</div>