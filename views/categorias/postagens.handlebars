<h1>{{categoria.nome}}</h1><hr>
{{#each postagens}}
<div class="card mt-2">
  <div class="card-body">
    <h3>{{titulo}}</h3>
    <p>{{descricao}}</p>
    <a href="/postagem/{{slug}}"><button class="btn btn-outline-success">Leia mais</button></a>
    <hr>    
    <small>Data da publicação: {{data}}</small>
  </div>
</div>
{{else}}
  <h5>Nenhuma posagem....</h5>
{{/each}}